<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <title> <%= tabName %> </title>
</head>
<body>
<input type="button" hidden value="HAHA Button" onclick="alert('HAHA Get Pranked :3')">

    
    <form action="/nvgBack" method="post">

        <button class="pathButton" form="back" type="submit" >Home</button>

        <% for (folder of path) { %>

            <button class="pathButton" name="folder" value="<%= folder %>" type="submit" > <%= folder %> </button>
      
        <% } %>
    </form>
    





    <p><%= folderSize %> /  <%= folderCap %> </p>
    <p>Used: <%= percentUsed %>%</p>
    <p><%= err %></p>
    

    
    
    
    <form action="/" method="post" enctype="multipart/form-data">

        

            <input type="file" name="filename">
            
            <input class="fileSubmit" type="submit" value="Upload File">

        
        
    </form>

 
    





    <form action="/delete" method="post">
    <input class="deleteButton" type="submit" class="deleteButton" value="Delete Selected">

    <% for (file of files) { %>
        
        <div class="files">

            <li>
                

                <input  type="checkbox" class="checkbox" id="checkboxid" name= "file" value='<%= currentDir + file %>'>
                <a href="<%= currentDir + file %>" class="fileDeleteDisplay" id="fileDelete" download="<%= file %>" ><%= file %></a>
                <p style="display: inline;"> <%= size[files.indexOf(file)] %> </p>
                <button class="actionButton" id="viewButton" name="clickedFolder" value="<%= file %>" form="viewForm" type="submit">Open</button>
                <button class="actionButton">...</button>    

            </li>
        
        </div>

        <br>
        

    <% } %>    
    
</form>



<form id="back" action="/back" method="post"></form>
<form action="/view" id="viewForm" method="post"></form>



    

